generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        String    @default(cuid()) @id
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    email     String    @unique
    password  String
    name      String
    phone     String    @unique
}
model Business {
    id          String    @default(cuid()) @id
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    name        String    @unique
    description String
    type        String
    address     String
    location    String
}
model Product {
    id          String    @default(cuid()) @id
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
    name        String    @unique
    description String
    cost        String
    count       String
}
